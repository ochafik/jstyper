{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "build",
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "noImplicitAny": false,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noFallthroughCasesInSwitch": true,
        "alwaysStrict": true,
        "pretty": true,
        "removeComments": true,
        "sourceMap": true,
        "allowJs": false,
        "strictNullChecks": true
    },
    "atom": {
        "rewriteTsconfig": true
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ]
}
